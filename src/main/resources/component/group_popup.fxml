<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.datadownloadtool.controller.GroupPopupController"
      fx:id="groupPopupPane"
      spacing="30" alignment="CENTER"
      style="-fx-padding: 20; -fx-border-color: #003366; -fx-border-width: 2; -fx-background-color: white;"
      prefWidth="400"
      prefHeight="200"
      fillWidth="true"
>
    <Label text="Create Group" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <GridPane hgap="15" vgap="15" maxWidth="Infinity">
        <columnConstraints>
            <ColumnConstraints percentWidth="30" halignment="RIGHT"/>
            <ColumnConstraints percentWidth="70" hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Group name:" style="-fx-text-overrun: clip;"  GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="groupNameField" promptText="Enter name" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200" maxWidth="Infinity"/>

        <Label text="Type:" style="-fx-text-overrun: clip;"  GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <FlowPane fx:id="groupTypeBox" hgap="10" vgap="10"
                  GridPane.rowIndex="1" GridPane.columnIndex="1"
                  maxWidth="Infinity"/>
    </GridPane>
    <Button text="Save" onAction="#handleSave"/>
</VBox>